<resources>

    <style name="title">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="font">@font/seat_font_black</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="font">@font/seat_font_regular</item>
    </style>

    <style name="text">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="font">@font/seat_font_regular</item>
    </style>

    <style name="details">
        <item name="android:textSize">@dimen/details</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="font">@font/seat_font_regular</item>
    </style>

    <style name="editText_app">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/edit</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="textInputLayout_app" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">@color/black</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColorLink">?attr/colorPrimary</item>
        <item name="startIconTint">@color/black</item>
        <item name="endIconTint">@color/black</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="buton_app">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/edit</item>
        <item name="android:layout_margin">10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="switch_app" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">?attr/colorSecondary</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
    </style>

</resources>