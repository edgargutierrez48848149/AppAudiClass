<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Tema de la aplicaci칩n base Night -->
    <style name="Theme.AppAudiClass" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--color para la barra de la aplicaci칩n y otros elementos primarios de la interfaz de usuario-->
        <item name="colorPrimary">@color/primary</item>
        <!--una variante m치s oscura del color primario, usada para la barra de estado y barras de aplicaciones contextuales-->
        <item name="colorPrimaryVariant">@color/secundary</item>
        <!--un color secundario para controles como casillas de verificaci칩n y campos de texto-->
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secundary</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar y navigation transparentes -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Status bar blanca o negra -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="WebView" parent="Theme.AppAudiClass">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="PdfViewer" parent="Theme.AppAudiClass">
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


</resources>